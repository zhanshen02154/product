package main

import (
	"context"
	"fmt"
	"git.imooc.com/zhanshen1614/product/cmd"
	go_micro_service_product "git.imooc.com/zhanshen1614/product/proto/product"
	"github.com/micro/go-micro/v2"
	"github.com/micro/go-micro/v2/registry"
	"github.com/micro/go-micro/v2/util/log"
	"github.com/micro/go-plugins/registry/consul/v2"
	"github.com/micro/go-plugins/wrapper/trace/opentracing/v2"
	opetracing2 "github.com/opentracing/opentracing-go"
	"time"
)

func main() {
	consulRegistry := consul.NewRegistry(func(options *registry.Options) {
		options.Addrs = []string{
			fmt.Sprintf("%s:%d", cmd.CONSUL_ADDR, cmd.CONSUL_PORT),
		}
		options.Timeout = 3 * time.Minute
	})

	//链路追踪
	//tracer, io, err := common.NewTracer(cmd.SERVICE_CLIENT_NAME, cmd.TRACER_ADDR)
	//if err != nil {
	//	log.Fatal(err)
	//}
	//defer io.Close()
	//opetracing2.SetGlobalTracer(tracer)

	service := micro.NewService(
		micro.Name(cmd.SERVICE_CLIENT_NAME),
		micro.Version("latest"),
		micro.Address("127.0.0.1:8085"),
		micro.Registry(consulRegistry),
		micro.WrapHandler(opentracing.NewHandlerWrapper(opetracing2.GlobalTracer())),
	)

	productService := go_micro_service_product.NewProductService(cmd.SERVICE_NAME, service.Client())

	productAdd := go_micro_service_product.ProductInfo{
		ProductName:        "imooc",
		ProductSku:         "cap-08",
		ProductPrice:       60.68,
		ProductDescription: "imooc-cap",
		ProductImage: []*go_micro_service_product.ProductImage{
			{
				ImageName: "cap-image",
				ImageCode: "capimage02",
				ImageUrl: "capimage02",
			},
		},
		ProductSizes: []*go_micro_service_product.ProductSize{
			{
				SizeName:"cap-size",
				SizeCode: "cap-size-code",
			},
		},
		ProductSeo: &go_micro_service_product.ProductSeo{
			SeoTitle: "cap-seo",
			SeoKeyword: "cap-seo",
			SeoDescription: "cap-seo",
			SeoCode: "cap-seo",
		},
	}

	resp, err := productService.AddProduct(context.TODO(),&productAdd)
	if err != nil {
		log.Fatal(err)
	}
	fmt.Println(resp)
}